<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--欢迎界面-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>queryUserServlet</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.QueryUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>queryUserServlet</servlet-name>
        <url-pattern>/sys/queryUser.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>break</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.BreakServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>break</servlet-name>
        <url-pattern>/sys/break.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>alterPwd</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.PwdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>alterPwd</servlet-name>
        <url-pattern>/sys/alterPwd.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserOperationServlet</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.UserOperationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserOperationServlet</servlet-name>
        <url-pattern>/sys/UserOperation.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UniqueCodeServlet</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.UniqueCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UniqueCodeServlet</servlet-name>
        <url-pattern>/sys/UniqueCodeServlet.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueryWarehouseInfoServlet</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.QueryWarehouseInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryWarehouseInfoServlet</servlet-name>
        <url-pattern>/sys/QueryWarehouseInfo.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddGoodsServlet</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.AddGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddGoodsServlet</servlet-name>
        <url-pattern>/sys/AddGoods.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueryClassInfoServlet</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.QueryClassInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryClassInfoServlet</servlet-name>
        <url-pattern>/sys/QueryClassInfo.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddNewGoodsServlet</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.AddNewGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewGoodsServlet</servlet-name>
        <url-pattern>/sys/AddNewGoods.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueryWarehouseLogServlet</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.QueryWarehouseLogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryWarehouseLogServlet</servlet-name>
        <url-pattern>/sys/QueryWarehouseLog.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UniqueWareNameServlet</servlet-name>
        <servlet-class>com.jiuzhao73.servlet.UniqueWareNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UniqueWareNameServlet</servlet-name>
        <url-pattern>/sys/UniqueWareName.do</url-pattern>
    </servlet-mapping>
    <!--字符过滤-->
    <filter>
        <filter-name>CharSetFilter</filter-name>
        <filter-class>com.jiuzhao73.filter.CharSetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharSetFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <!--系统登入过滤-->
    <filter>
        <filter-name>SysFilter</filter-name>
        <filter-class>com.jiuzhao73.filter.SysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SysFilter</filter-name>
        <url-pattern>/sys/*</url-pattern>
    </filter-mapping>
    <!--session存活时间-->
    <session-config>
        <session-timeout>180</session-timeout>
    </session-config>
</web-app>